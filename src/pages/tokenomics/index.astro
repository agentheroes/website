<style lang="scss">
	@use "@/scss/base/wraps" as *;

	.divider {
		margin: 0 2rem 3rem;
		height: 1px;
		background: #212121;
		// remove 4rem as inline margin (see above (2 + 2 = 4))
		width: calc(100% - 4rem);

		@media (min-width:$screen-sm-min) {
			margin: 0 ;
			width: 100%;
		}
	}

	h2 {
		font-size: 2.4rem;
		line-height: 112%;
		font-weight: 600;
		letter-spacing: -0.04em;
		margin-bottom: 1.6rem;
		
		@media (min-width:$screen-sm-min) {
			font-size: 4.8rem;
			margin-bottom: 5rem;
		}

		span {
			color: #FD770A;
		}
	}
</style>