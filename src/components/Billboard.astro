import Button from "./ui/Button.astro";---

<section class="ah-billboard">
    <div class="ah-billboard-content">
        <div class="ah-billboard-container">
            <div class="ah-billboard-place">
                <div class="ah-billboard-canvas">
                    <div class="ah-billboard-img">
                        <picture>
                            <source srcset="/images/billboard/1.jpg 1x, /images/billboard/1@2x.jpg 2x"
                                    media="(max-width: 767px)">
                            <img src="/images/billboard/2.jpg" srcset="/images/billboard/2@2x.jpg 2x" alt="">
                        </picture>
                    </div>
                </div>
                <div class="ah-billboard-info">
                    <div class="ah-billboard-header">
                        <h2>Ready to create?</h2>
                    </div>
                    <div class="ah-billboard-text">
                        <p>Let your AI agent do the heavy lifting <br/> â€” start creating smarter today.</p>
                    </div>
                    <div class="ah-billboard-action">
                        <Button
                                as="a"
                                href="https://github.com/agentheroes/agentheroes"
                                target="_blank"
                                text="Clone the project on GitHub"
                                variant=" -md -orange"
                        />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    import gsap from 'gsap';
    import ScrollTrigger from 'gsap/ScrollTrigger';
    gsap.registerPlugin(ScrollTrigger);


    let img = document.querySelector('.ah-billboard-img');
    let info = document.querySelector('.ah-billboard-info');

    const magicScrollBillboard = () => {
        ScrollTrigger.create({
            animation: tlScrollBillboard(),
            trigger: img,
            start: "top bottom"
        });
    }

    const tlScrollBillboard = () => {
        const tl = new gsap.timeline();

        tl.set([img, info], {willChange: "transform"});

        tl.from(img, {
            opacity: 0,
            scale: 0.9,
            ease: "expo.out",
            duration: 1.6,
        }, 0);

        tl.from(info, {
            y:60,
            opacity: 0,
            ease: "expo.out",
            duration: 1.8,
        }, 0.1);

        tl.set([img, info], {willChange: "auto"});

        return tl;
    }

    document.addEventListener("astro:page-load", () => {
        magicScrollBillboard();
    });
</script>

