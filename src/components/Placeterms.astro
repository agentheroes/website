<script>
    import gsap from 'gsap';
    import ScrollTrigger from 'gsap/ScrollTrigger';

    gsap.registerPlugin(ScrollTrigger);

    let text = document.querySelector('.ah-place-text');

    const magicScroll = () => {
        ScrollTrigger.create({
            animation: tlScroll(),
            trigger: text,
            start: "top bottom"
        });
    }

    const tlScroll = () => {
        const tl = new gsap.timeline();

        tl.set(text, {willChange: "transform"});

        tl.from(text, {
            y: 60,
            opacity: 0,
            ease: "expo.out",
            stagger: 0.07,
            duration: 2,
        }, 0.2);

        tl.set(text, {willChange: "auto"});

        return tl;
    }

    document.addEventListener("astro:page-load", () => {
        magicScroll();
    });
</script>


