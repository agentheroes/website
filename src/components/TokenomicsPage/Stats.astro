<style lang="scss">
	@use "@/scss/base/wraps" as *;

	.stats {
		$root:&;
    max-width: 144rem;
    margin-inline: auto;
    padding: 4.4rem 0;
    margin: 0 2rem;

    border-bottom: 1px solid #212121;

    @media (min-width:$screen-sm-min) {
      margin: 0;
      padding: 5.6rem 3.2rem 
    }

    @media (min-width:$screen-ml-min) {
      padding: 6rem 11rem 7.2rem;
      margin-inline:auto;
    }

    .header {

      @media (min-width:$screen-ml-min) {
        display: flex;
        justify-content: space-between;
        margin-bottom: 3.2rem;
      }
      h2 {
        margin-bottom: 1.2rem;
        text-align: center;
        font-weight: 600;
        letter-spacing: -0.04em;
        font-size: 3.2rem;
        line-height: 100%;

        @media (min-width:$screen-sm-min) {
          margin-bottom: 2.8rem;
        }
        
        @media (min-width:$screen-ml-min) {
          margin-bottom: 0;
          font-size: 4.8rem;
        }
      }

      .supplies {
        margin-bottom: 1.2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.4rem;

        @media (min-width:$screen-ml-min) {
          margin-bottom: 0;
          flex-direction: row;
          align-items: flex-end;
          gap: 1.6rem
        }
        span {
          font-size: 1.4rem;
          line-height: 138%;
          letter-spacing: -0.02em;
          color: $color-tertiary;
        }

        .amount {
          font-size: 2.4rem;
          line-height: 112%;
          letter-spacing: -0.04em;
          font-weight: 500;
          color: $color-nonary
        }
      }
    }


    .wrapper {
      display: flex;
      flex-direction: column;
      gap: 4.4rem;

      @media (min-width:$screen-sm-min) {
        gap: 5rem;
      }

      @media (min-width:$screen-ml-min) {
        gap: 6.2rem;
      }

      .top {
        flex: 1;
        display: grid;

        grid-template-columns: repeat(6, 1fr);
        grid-template-rows: repeat(10, 1fr);

        @media (min-width:$screen-sm-min) {
          grid-template-columns: repeat(20, 1fr);
          grid-template-rows: repeat(4, 1fr);
        }

        .box {
          display: flex;
          align-items: flex-end;
          justify-content: flex-start;
          padding: 0 0 1.5rem 1.2rem;

          // box-shadow instead of border
          box-shadow: 0 0 0 1px #1f1f1f;

          @media (min-width:$screen-ml-min) {
            padding: 0 0 1.5rem 2rem;
          }

          &--1 {
            grid-column: 1 / span 6;
            grid-row: 1 / span 3;

            padding-left: 1.9rem;
            padding-bottom: 1.5rem;
            background: #F72576;

            @media (min-width:$screen-sm-min) {
              grid-column: 1 / span 12;
              grid-row: 1 / span 2;
            }
          }

          &--2 {
            grid-column: 1 / span 6;
            grid-row: 4 / span 3;
            background: #2396FB;

            @media (min-width:$screen-sm-min) {
              grid-column: 1 / span 12;
              grid-row: 3 / span 2;
            }
          }

          &--3 {
            grid-column: 5 / span 2;
            grid-row: 6 / span 1;

            padding-bottom: 1.5rem;
            background: #BA90FE;
            @media (min-width:$screen-sm-min) {
              grid-column: 13 / span 2;
              grid-row: 3 / span 1;
            }
          }

          &--4 {
            grid-column: 1 / span 3;
            grid-row: 7 / span 1;
            background: #FFD966;
            @media (min-width:$screen-sm-min) {
              grid-column: 13 / span 4;
              grid-row: 4 / span 1;
            }
          }

          &--5 {
            grid-column: 4 / span 3;
            grid-row: 7 / span 1;
            background: #FD7302;
            @media (min-width:$screen-sm-min) {
              grid-column: 17 / span 4;
              grid-row: 4 / span 1;
            }
          }
          
          &--6 {
            grid-column: 1 / span 6;
            grid-row: 8 / span 2;
            background: #41F052;
            @media (min-width:$screen-sm-min) {
              grid-column: 13 / span 8;
              grid-row: 1 / span 2;
            }
          }
          &--7 {
            grid-column: 1 / span 6;
            grid-row: 10 / span 1;
            background: #13E7FB;
            @media (min-width:$screen-sm-min) {
              grid-column: 15 / span 6;
              grid-row: 3 / span 1;
            }
          }

          .info {
            margin-top: 1rem;

            @media (min-width:$screen-ml-min) {
              margin-top: 5.8rem ;
            }

            h3 {
              margin-bottom: 0.8rem;
              font-size: 1.5rem;
              font-weight: 300;
              line-height: 138%;
              letter-spacing: -0.02em;
              color: #2F2F2F;

              @media (min-width:$screen-sm-min) {
                font-size: 1.6rem;
              }
            }

            span {
              font-size: 2.25rem;
              line-height: 100%;
              font-weight: 500;
              letter-spacing: -0.04em;
              color: $color-denary;
              @media (min-width:$screen-sm-min) {
                font-size: 2.4rem;
              }
            }
          }
        }
      }

      .bottom {
        ul {
          display: flex;
          flex-direction: column;
          list-style: none;
          gap: 6.2rem; 

          @media (min-width:$screen-sm-min) {
            flex-wrap: wrap;
            flex-direction: row;
            gap: 4.4rem
          }

          @media (min-width:$screen-ml-min) {
            column-gap: 5.8rem;
            row-gap: 6.2rem;

          }
          .item {
            max-width: 26rem;

            @media (min-width:$screen-sm-min) {
              flex-basis: calc(50% - 2.2rem) ;
              max-width: initial;
            }

            // col gap 5.8rem / 4 + 5.8 / 2 = 4.35rem
            @media (min-width:$screen-ml-min) {
              flex-basis: calc(25% - 4.35rem) ;
            }
            .rect {
              width: 3rem;
              height: 3rem;
              margin-bottom: 1rem;
            }

            h4 {
              margin-bottom: 1rem;
              font-size: 2rem;
              font-weight: 500;
              line-height: 125%;
              letter-spacing: -0.04em;
              color: $color-base;

              span {
                color: $color-octonary;
              }
            }

            p {
              color: $color-senary;
              font-size: 1.6rem;
              line-height: 138%;
              letter-spacing: -0.02em;
            }

            &--1 {
              .rect {
                background: #2195FB;
              }
            }
            &--2 {
              .rect {
                background: #F72576;
              }
            }
            &--3 {

              .rect {
                background: #FFD865;
              }
            }
            &--4 {
              .rect {
                background: #41F052;
              }
            }
            &--5 {
              .rect {
                background: #FD7302;
              }
            }
            &--6 {
              .rect {
                background: #13E7FB;
              }
            }
            &--7 {
              .rect {
                background: #B98FFE;
              }
            }
          }
        }
      }
    }
	}
</style>
