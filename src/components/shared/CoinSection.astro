---
import Button from "../ui/Button.astro";
import CustomInput from "./CustomInput.astro";
import LogoBlock from "./LogoBlock.astro";

const { inputValue, isTokenomicsPage} = Astro.props;
---

<section class={`coin_section ${isTokenomicsPage ? 'tokenomics' : ''}`}>
  <picture>
    <img src="/images/coin/coin.png" srcset="/images/coin/coin-2x.png 2x" alt="Coin Image">
  </picture>
  <!-- h2 element slot -->
  <slot/>

  <div class="input_wrap">
    <CustomInput noGradients={true} value={inputValue}/>
  </div>

  <div class="btn_wrap">
    <Button variant=" -sm -orange" text="Explore Tokenomics" />
  </div>

  <h3>Listed on:</h3>

  <LogoBlock/>
</section>


<style lang="scss">
  @use "../../scss/base/wraps" as *;

  .coin_section {
    padding-top: 3rem;
    padding-bottom: 7.2rem;
    margin-inline: 2rem;
    border-top: 1px solid #212121;
    border-bottom: 1px solid #212121;
    
    text-align: center;

    @media (min-width:$screen-sm-min) {
      padding-top: 7.2rem;
      margin-inline: auto;
    }

    &.tokenomics {
      .btn_wrap {
        display: none;
      }
    }

    picture {
      display: inline-block;
      width: 12rem;
      height: 12rem;
      margin-bottom: 2.4rem;

      @media (min-width:$screen-sm-min) {
        font-size: 3.2rem;
        margin-bottom: 7.2rem;

        width: 22.4rem;
        height: 22.4rem;
      }

      img {
        width: 100%;
        height: 100%;
      }
    }

    .input_wrap {
      width: 90%;
      max-width: 66rem;
      margin-inline: auto;
      margin-bottom: 2.4rem;

      @media (min-width:$screen-sm-min) {
        margin-bottom: 5rem;
      }
    }

    .btn_wrap {
      margin-bottom: 3rem;

      @media (min-width:$screen-sm-min) {
        margin-bottom: 5rem;
      }
    }

    h3 {
      font-size: 2.4rem;
      font-weight: 600;
      line-height: 100%;
      letter-spacing: -0.04em;

      @media (min-width:$screen-sm-min) {
        margin-bottom: 2.4rem;
        font-size: 3.2rem;
      }

      @media (min-width:$screen-ml-min) {
        margin-bottom: 1.4rem;
      }
    }
  }

</style>


